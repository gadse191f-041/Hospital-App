<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navView"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/txtHospitalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="66dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Family Love Hospital"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/txtSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="113dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Be Healthy.. Be Happy.."
        android:textColor="#5529CD"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="141dp"
        android:layout_height="108dp"
        android:layout_x="265dp"
        android:layout_y="63dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="175dp"
        android:layout_x="3dp"
        android:layout_y="181dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPharmacy"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/phar" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp"
            android:id="@+id/cardEchanelling">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgEchanelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/echa" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/txtPharmacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="53dp"
        android:layout_y="366dp"
        android:text="Pharmacy"
        android:textColor="#342A2C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEchanelling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="238dp"
        android:layout_y="366dp"
        android:text="E-Chanelling"
        android:textColor="#342A2C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        android:layout_x="8dp"
        android:layout_y="397dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp"
            android:id="@+id/cardClinic">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgClinic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/clin" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardChild"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgChildHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/chil" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="579dp"
        android:text="Clinic"
        android:textColor="#342A2C"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPregnencySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="810dp"
            android:text="Pregnancy Section"
            android:textColor="#342A2C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/txtChildHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="244dp"
        android:layout_y="582dp"
        android:text="Child Health"
        android:textColor="#342A2C"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="262dp"
            android:layout_y="810dp"
            android:text="About Us"
            android:textColor="#342A2C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
        android:layout_width="400dp"
        android:layout_height="175dp"
        android:layout_weight="1"
        android:layout_x="5dp"
        android:layout_y="627dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPregnency"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPregnency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/preg" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="2dp"
            android:id="@+id/cardAboutUs">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgAboutUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/as" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</AbsoluteLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>